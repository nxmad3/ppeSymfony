<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}

            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="https://kit.fontawesome.com/a7749f8008.js" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        {% endblock %}

    </head>
    <body style="margin: 0">
    <nav style="background-color: maroon; text-decoration: none; "><li>
            <button style="background-color: white;margin-top: 2%; margin-bottom: 2%; width: 10%; padding-top: 1%;padding-bottom: 1%">Logo</button>
            <a style="color: white; margin-left: 5%; text-decoration: none" href="{{ path('index') }}">ACCUEIL</a>
            <a style="color: white; margin-left: 5%; text-decoration: none" href="">BIENS</a>
            <a style="color: white; margin-left: 5%; text-decoration: none" href="{{ path('tenant-list') }}">LOCATAIRES</a>
            <a style="color: white; margin-left: 5%; text-decoration: none" href="{{ path('representative-list') }}">MANDATAIRES</a>
            <a style="color: white; margin-left: 30%; text-decoration: none" href="{{ path('profil') }}"><i class="fas fa-user-circle"></i>MON PROFIL</a>

        </li>
    </nav>
        {% block body %}{% endblock %}
        {% block footer %}
            <footer>
                <section style="background-color: black; margin-top: 10%; margin-left: 0%; padding-top: 2%;padding-bottom: 4%">
                    <p style="float: right; color: #FFFFFF;margin-right: 3%">version 1.0</p>
                    <p style="color: #FFFFFF; margin-left: 5%">Gestion locative</p>
                    <p style="color: #FFFFFF; margin-left: 5%">Contact téléphone : 06 06 06 06 06 </p>
                    <p style="color: #FFFFFF; margin-left: 5%">Contact email : contact@gestionlocative.fr</p>

                </section>
            </footer>
        {% endblock %}
    </body>
</html>
