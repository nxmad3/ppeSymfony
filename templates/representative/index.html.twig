{% extends 'base.html.twig' %}
{% block body %}
    <h1>liste des mandataire</h1>
    <a type="button"href="/addRepresentative">Ajouter un locataire</a>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">nom</th>
            <th scope="col">prenom</th>
            <th scope="col">nombre de locations</th>
            <th scope="col">action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td><a href="/user/{{ user[0].id }}">{{ user[0].lastName }}</a></td>
                <td>{{ user[0].name }}</td>
                <td>{{ user[0].totalResidence }}</td>
                <td><a type="button"href="/editrepresentative/{{ user[0].id }}">Mettre à jour les données</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}